<h1>New account </h1>
<p>Sign up for a new account!</p>


<% if @user.errors.any? %> 
<ul>
	<% @user.errors.full_messages.each do |m| %> 
	<li><%= m %></li>
	<% end %>
</ul>
<% end %>


<%= form_for @user do |f| %>
	<div class="field">
		<%= f.label :email %> 
		<%= f.email_field :email %> 

	</div>

	<div class="field">
		<%= f.label :password %> 
		<%= f.password_field :password %> 

	</div>

	<div class="field">
		<%= f.label :password_confirmation %> 
		<%= f.password_field :password_confirmation %> 

	</div>

	<%= f.submit 'sign up' %>

<% end %>
