<h1>New account </h1>
<p>Find me in app/views/users/create.html.erb</p>

<%= form_for @user do |f| %>
	<div class="field">
		<%= f.label :email %> 
		<%= f.email_field :email %> 

	</div>

	<div class="field">
		<%= f.label :password %> 
		<%= f.password_field :password %> 

	</div>

	<div class="field">
		<%= f.label :password_confirmation %> 
		<%= f.password_field :password_confirmation %> 

	</div>

	<%= f.submit 'sign up' %>

<% end %>
